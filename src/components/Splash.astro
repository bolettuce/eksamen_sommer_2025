---
let isVisible = true;
---

{isVisible && (
<div id="splash" class="fixed inset-0 z-[100] flex items-center justify-center bg-white/80 backdrop-blur-xl">
    <div class="flex flex-col items-center text-lysgul-500 text-center text-heading-01-mobile sm:text-display-02-desktop">
        <div class="flex flex-wrap justify-center gap-1 overflow-hidden">
        {Array.from('Nykredit').map((letter, index) => (
            <span
            class="inline-block opacity-0 animate-fade-up"
            style={{ animationDelay: `${index * 80}ms`, animationDuration: '700ms', animationTimingFunction: 'ease-out' }}
            >
            {letter}
            </span>
        ))}
        </div>
        <div class="flex flex-wrap justify-center gap-1 overflow-hidden mt-s">
          {Array.from('Art Collection').map((letter, index) => (
            <span
              class="inline-block opacity-0 animate-fade-up"
              style={{
                animationDelay: `${(index + 10) * 80}ms`,
                animationDuration: '700ms',
                animationTimingFunction: 'ease-out'
              }}
            >
              {letter === ' ' ? '\u00a0' : letter}
            </span>
          ))}
        </div>
    </div>
</div>
)}

<script>
  // Kun vis splash hvis det ikke tidligere er gemt
  if (!localStorage.getItem('splashShown')) {
    localStorage.setItem('splashShown', 'true');
    setTimeout(() => {
      const splash = document.getElementById('splash');
      if (splash) {
        splash.classList.add('opacity-0', 'transition-opacity', 'duration-700');
        setTimeout(() => {
          splash.remove();
        }, 700); // tid til fade-out animation
      }
    }, 3000); // splash vises i 3 sekunder
  } else {
    // Hvis splash tidligere er vist, fjern det straks
    const splash = document.getElementById('splash');
    if (splash) splash.remove();
  }
</script>
