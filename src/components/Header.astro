<header class="fixed top-0 left-0 w-full z-50 p-l flex justify-between items-start">
<!-- Logo -->
    <a
        href="/pages/index.astro"
        class="block w-auto h-auto hover:animate-spin-once">
        <img src="/images/nykredit_logo.svg"
            alt="Nykredit logo"
            class="h-9"
        />
    </a>
  
    <!-- Burger button -->
    <button
        class="burger relative z-50 flex flex-col justify-between w-7 h-6"
        aria-label="Toggle menu"
        >
        <span class="line h-1 bg-lysgul-500 rounded-pill transition-all duration-300"></span>
        <span class="line h-1 bg-lysgul-500 rounded-pill transition-all duration-300"></span>
        <span class="line h-1 bg-lysgul-500 rounded-pill transition-all duration-300"></span>
    </button>
  
    <!-- Menu overlay -->
    <div
      class="menu fixed inset-0 bg-white/20 backdrop-blur z-40 flex justify-end p-2xl opacity-0 invisible duration-300"
    >
    <ul class="text-heading-01-mobile sm:text-display-02-desktop space-y-l md:space-y-2xl text-right pt-4xl">
        <li>
          <a href="#" class="hover:underline transition-all duration-300">
